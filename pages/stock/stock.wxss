/* pages/stock/stock.wxss - 库存查询页面样式 */
/* 继承 app.wxss 中的通用样式 */

/* 登录表单样式 */
.login-card {
  margin-bottom: 20rpx;
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #555;
}

.form-input {
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #f9f9f9;
}

.form-note {
  margin-top: 10rpx;
}

.note-text {
  font-size: 24rpx;
  color: #888;
}

.form-actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

/* 筛选输入框样式 */
.filter-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.filter-group {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
}

.filter-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.filter-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.filter-input {
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #e0f7ff 0%, #f0f9ff 100%);
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  transition: all 0.3s;
  box-sizing: border-box;
  width: 100%;
}

.filter-input:active {
  background: #e8f0fe;
  border-color: #667eea;
}

.filter-actions {
  margin-top: 40rpx;
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

/* 汇总卡片样式 - 与index页面保持一致 */
.summary-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

/* .stat-card, .stat-content, .stat-label, .stat-value 样式继承 app.wxss */

/* 商品汇总表格样式 */
.card-body-detail {
  padding: 0;
}

.detail-section {
  padding: 20rpx;
}

.table-container {
  width: 100%;
  overflow: hidden;
}

.table {
  width: 100%;
}

.table-body {
  width: 100%;
}

.table-body-content {
  min-width: 800rpx;
}

.table-header {
  display: flex;
  background: #667eea;
  color: white;
  font-weight: 600;
  border-radius: 10rpx 10rpx 0 0;
  overflow: hidden;
}

.sticky-header {
  position: sticky;
  top: 0;
  z-index: 10;
}

.cell {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  min-width: 150rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.brand-cell:nth-child(3) {
    flex: 1;
}

.brand-cell:nth-child(2) {
  flex: 2.8;
}

.brand-cell:nth-child(1) {
  flex: 0.8;
}

.table-rows {
  display: flex;
  flex-direction: column;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
  background: white;
  transition: background 0.2s;
}

.table-row:nth-child(even) {
  background: #f9f9f9;
}

.table-row:hover {
  background: #f0f0f0;
}

/* 无数据提示 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
}

.no-data-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.no-data-text {
  font-size: 30rpx;
}

/* 查询结果提示 */
.test-result {
  margin: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  border-left: 5rpx solid #667eea;
}

.result-title {
  font-weight: 600;
  color: #555;
  margin-right: 10rpx;
}

.result-content {
  color: #333;
}

/* 状态颜色 */
.warning {
  color: #f0ad4e;
}

.success {
  color: #07c160;
}

.error {
  color: #e74c3c;
}

/* 按钮样式 - 使用 app.wxss 中的通用按钮样式 */

/* 加载动画 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #555;
}

/* 分享图片相关样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header-left,
.section-header-right {
  display: flex;
  align-items: center;
}

.btn-share {
  background: #07c160;
  color: white;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  line-height: 1.2;
  margin: 0;
}

.btn-share::after {
  border: none;
}

.btn-share:active {
  background: #05a050;
  opacity: 0.9;
}

.hidden-canvas {
  position: absolute;
  visibility: hidden;
}

/* 品牌汇总表格区域特定样式 */
.brand-summary-section .section-header {
  margin-bottom: 30rpx;
}

.brand-summary-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}