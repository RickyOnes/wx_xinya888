/* pages/login/login.wxss */
page {
  height: 100vh;
  overflow: hidden;
}

.login-container {
  height: 100vh;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.logo-container {
  text-align: center;
  margin-bottom: 100rpx;
  margin-top: 100rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom:60rpx;
  border-radius: 16rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #4361ee;
  display: block;
}

.login-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ef0f0f;
  text-align: center;
  margin-bottom: 20rpx;
  display: block;
}

.form-container {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 40rpx;
  padding-right: 40rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}

.input:focus {
  border-color: #4361ee;
  box-shadow: 0 0 0 4rpx rgba(67, 97, 238, 0.2);
}

.login-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #4361ee 0%, #3f37c9 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 20rpx;
}

.register-link {
  text-align: center;
  margin-top: 40rpx;
}

.register-link text {
  color: #4361ee;
  font-size: 28rpx;
}