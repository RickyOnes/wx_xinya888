<!--pages/login/login.wxml-->
<view class="login-container">
  <view class="logo-container">
    <image src="/images/icon64.png" class="logo"></image>
    <text class="login-title">欢迎登录</text>
    <text class="title">欣雅商贸销售数据查询系统</text>
  </view>
  
  <view class="form-container">
    <view class="input-group">
      <input 
        class="input" 
        type="text" 
        placeholder="请输入邮箱" 
        value="{{email}}" 
        bindinput="onEmailInput"
      />
    </view>
    
    <view class="input-group">
      <input 
        class="input" 
        type="password" 
        placeholder="请输入密码" 
        value="{{password}}" 
        bindinput="onPasswordInput"
        bindconfirm="onLogin"
      />
    </view>
    
    <button 
      class="login-btn" 
      disabled="{{isLoading}}"
      bindtap="onLogin"
    >
      {{isLoading ? '登录中...' : '登录'}}
    </button>
    
    <view class="register-link" bindtap="toRegister">
      <text class="link-text" bindtap="onForgotPassword">忘记密码</text>
    </view>
  </view>
</view>