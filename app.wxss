/* app.wxss - 通用样式定义 */
/* 页面容器 - 解决tabbar遮挡问题，适配不同屏幕高度 */
.page-container {
  height: 100vh;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-sizing: border-box;
}

/* 内容区域 - 独立滚动，避免滚动条出现在tabbar上 */
.content {
  height: 100%;
  overflow-y: auto;
  padding-bottom: 164rpx; /* 为80px高的tabbar预留空间 */
  box-sizing: border-box;
}

/* 顶部用户信息栏 */
.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx 10rpx 10rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  padding: 10rpx 10rpx;
  background: white;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #667eea;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-email {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.user-status {
  font-size: 22rpx;
  color: #07c160;
  margin-top: 5rpx;
}

.dropdown-icon {
  margin-left: 10rpx;
  color: #999;
  font-size: 20rpx;
}

.header-actions {
  display: flex;
  align-items: center;
}

.btn-refresh {
  background: #667eea;
  color: white;
  border-radius: 40rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
  transition: all 0.2s;
}

.btn-refresh:active {
  transform: scale(0.92);
  opacity: 0.85;
  box-shadow: 0 2rpx 6rpx rgba(102, 126, 234, 0.6) inset;
}

/* 卡片样式优化 */
.card {
  margin: 10rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.card-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.card-body {
  padding: 20rpx;
  background: white;
}

/* 筛选器网格布局 */
.filter-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.filter-group {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
}

.filter-item {
  flex: 1;
}

.filter-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.picker {
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #e0f7ff 0%, #f0f9ff 100%);
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  transition: all 0.3s;
}

.picker:active {
  background: #e8f0fe;
  border-color: #667eea;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
  justify-content: center;
}

.filter-actions .btn{
  width: 45%;
  border-radius: 12rpx;
  font-size: 28rpx;
  height: 85rpx;
  line-height: 80rpx;
  transition: all 0.3s;
  border: none;
}

.filter-actions .btn:active {
  transform: scale(0.95);
  opacity: 0.9;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2) inset;
}

/* 统计卡片网格布局 */
.summary-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-card {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  border-left: 4px solid #4361ee;
  text-align: center;
}

.stat-content {
  flex: 1;
}

.stat-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

/* 品牌汇总表格 */
.brand-summary-section {
  margin-bottom: 20rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.section-subtitle {
  font-size: 22rpx;
  color: #666;
}

.brand-table-container {
  width: 100%;
}

.brand-table {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #e0e0e0;
}

.brand-table-header {
  background: #f8f9fa;
  display: flex;
  border-bottom: 2rpx solid #667eea;
  padding: 18rpx 0rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.brand-table-body-content {
  min-width: 600rpx;
}

.brand-table-rows {
  display: block;
}

.brand-table-row {
  display: flex;
  align-items: center;
  padding: 14rpx 0;
  min-height: 35rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.brand-table-row:active {
  background: #f8f9fa;
}

.brand-table-row:nth-child(even) {
  background: #fafafa;
}

.brand-cell {
  flex: 1;
  padding: 0 0 0 20rpx;
  font-size: 24rpx;
  text-align: left;
  color: #333;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.header-cell {
  font-weight: 600;
  color: #667eea;
  font-size: 26rpx;
}

/* 品牌汇总总金额列宽度1.4 */
.brand-cell:nth-child(3) {
  flex: 1.4;
}

/* 品牌汇总占比列宽度0.8*/
.brand-cell:nth-child(4) {
  flex: 0.7;
}
/* 品牌汇总第一列宽度调整（选中具体品牌时变宽） */
.brand-cell.brand-cell-wide {
  flex: 2.5;
}

/* 详细记录区域通用样式 */
.header-left {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.header-right {
  display: flex;
  gap: 15rpx;
  margin-left: auto;
  align-items: center;
}

.detail-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(0, 0, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.btn-export {
  background: #1989fa;
  color: white;
  padding-left: 10px;
  padding-right: 10px;
  border-radius: 20rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
  transition: all 0.2s;
}

.btn-export:active {
  transform: scale(0.92);
  opacity: 0.85;
  box-shadow: 0 2rpx 6rpx rgba(25, 137, 250, 0.5) inset;
}

.toggle-icon {
  background: #2dcf05;
  border-radius: 20rpx;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 24rpx;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(62, 194, 102, 0.358);
  transition: all 0.2s;
}

.toggle-icon:active {
  transform: scale(0.92);
  opacity: 0.85;
  box-shadow: 0 2rpx 6rpx rgba(62, 194, 102, 0.5) inset;
}

.table-container {
  width: 100%;
}

.table {
  background: white;
}

.table-header {
  display: flex;
  background: #f8f9fa;
  border-bottom: 2rpx solid #667eea;
}

.table-header .cell {
  background: #f8f9fa;
  font-weight: 600;
  color: #667eea;
  font-size: 26rpx;
}

.sticky-header {
  position: sticky;
  top: 0;
  z-index: 100;
}

.cell {
  flex: 1;
  padding: 20rpx 12rpx;
  font-size: 24rpx;
  text-align: center;
  min-width: 0;
  border-right: 1rpx solid #e0e0e0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cell-amount {
  text-align: left;
}

.table-body {
  background: white;
}

.table-body-content {
  min-width: 1200rpx;
}

.table-rows {
  display: block;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.table-row:nth-child(even) {
  background: #fafafa;
}

.cell:last-child {
  border-right: none;
}

/* 无数据样式 */
.no-data {
  text-align: center;
  padding: 80rpx 0;
}

.no-data-icon {
  display: block;
  font-size: 80rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.no-data-text {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.hint-text {
  display: block;
  text-align: center;
  padding: 30rpx;
  color: #666;
  font-size: 26rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

/* 加载动画 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  text-align: center;
  padding: 60rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.spinner {
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 通用按钮样式 */
.btn {
  font-weight: 600;
  margin-bottom: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.btn:active {
  transform: scale(0.97);
  opacity: 0.9;
}

.btn-primary {
  background:  linear-gradient(135deg, #FF9F40 0, #FF7F00 100%);
  color: white;
}

.btn-secondary {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
}

/* index页面详细列表列宽设置 */
/* 销售日期列 */
.cell:nth-child(1) {
  flex: 0.7;
  min-width: 120rpx;
}

/* 商品名称列 */
.cell-product-name {
  flex: 1.6;
  text-align: left;
}

/* 仓库列 */
.cell:nth-child(3) {
  flex: 0.5;
  min-width: 100rpx;
}

/* 销量列 */
.cell:nth-child(4) {
  flex: 0.5;
  min-width: 100rpx;
  text-align: right;
}

/* 单价列 */
.cell:nth-child(5) {
  flex: 0.5;
  text-align: right;
}

/* 金额列 */
.cell-amount {
  flex: 0.8;
  min-width: 150rpx;
  text-align: right;
}