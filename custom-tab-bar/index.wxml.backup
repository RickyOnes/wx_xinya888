<view class="custom-tab-bar">
  <view class="tab-bar-item" wx:for="{{list}}" wx:key="pagePath" data-index="{{index}}" bindtap="switchTab">
    <image class="tab-bar-icon {{selected === index ? 'selected' : ''}}" src="{{selected === index ? item.selectedIconPath : item.iconPath}}" mode="aspectFit"></image>
    <text class="tab-bar-text {{selected === index ? 'selected' : ''}}">{{item.text}}</text>
  </view>
</view>